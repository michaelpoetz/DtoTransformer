<project name="GenericEntityToDtoTransformer" default="test" basedir=".">
	<description>
		Build my stuff
	</description>
	
	<property name="src" location="src"/>	
	<property name="bin" location="bin"/>	
	
	<target name="init">
		<mkdir dir="${src}/main"/>
		<mkdir dir="${src}/test"/>
		<mkdir dir="${bin}"/>
	</target>

	<target name="compile" depends="init">
		<javac srcdir="${src}" destdir="${bin}"/>
	</target>

	<target name="test" depends="compile">
		<java srcdir="${src}/test"/>
	</target>

	<target name="clean">
		<delete dir="${bin}"/>
	</target>
</project>
